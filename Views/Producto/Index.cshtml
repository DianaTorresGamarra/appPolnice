@model IEnumerable<appPolnice.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<center><h1>Lista de Productos - Polnice</h1></center>

<p>
    <a asp-action="Create">Registrar Nuevos Productos</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Nombre del Producto
                
            </th>
            <th>
                Descripci√≥n del Producto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                Estado del Producto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <div class="card-body">
                  <div class="card-img-actions">
                    <center><img class="img-responsive" width="150" height="200"
                       src="/images/@item.ImageName" alt="@item.ImageName"  /></center>
                  </div>
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
