@model appPolnice.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}

<div class="text-center">

    <fieldset class="form">

    <h1 class="display-4">Cont√°ctanos</h1>

    <form asp-controller="Contacto" asp-action="Create">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control form-control-sm" type="text" placeholder="Escribe un nombre" aria-label=".form-control-sm" />

        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" placeholder="Ingresa tu email" />

        <label asp-for="Subject" class="control-label"></label>
        <input asp-for="Subject" class="form-control" />

        <label asp-for="Comment" class="control-label"></label>
        <input asp-for="Comment" class="form-control" placeholder="Ingresa un comentario"/>

        <br>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enviar</button> 
        </div>               

    </form>  

    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    </fieldset>

</div>