@model dynamic;
@using System.Collections.Generic;

@{
    ViewData["Title"] = "CARRITO DE COMPRAS";
    IEnumerable<appPolnice.Models.Proforma> listItemsCarrito = new List <Proforma>();
        listItemsCarrito = @Model.elementosCarrito;
        Decimal montoTotal = @Model.montoTotal;
}

<h1>@ViewData["Title"]</h1>

        <div class="container" >
        <div id="contenedor-tabla" class="table-responsive-md">
<table class="table table-striped" style="font-size: 18px;">
    <thead class="table table-striped table-dark">
        <tr>
            <th>
                PRODUCTO
            </th>
            <th>
                CANTIDAD
            </th>
            <th>
                PRECIO
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Proforma item in Model.elementosCarrito) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Name)
            </td>
            <td>
                <center>@Html.DisplayFor(modelItem => item.Cantidad)</center>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)                
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="" style="font-size: 15px;"><img src="/images/editar.png" width="15px" heigh="15px"></a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-space" style="font-size: 15px;" onclick="return confirm('¿Desea eliminar el ítem del carrito?')"><img src="/images/eliminar.png" width="15px" heigh="15px"></a>
            </td>
        </tr>
}
    </tbody>
</table>
        </div>
    </div>
    <br>
    <br>
    
<center><p>Total S/. @montoTotal</p><a class="btn btn-primary" asp-controller="Pago"
    asp-action="Create" asp-route-monto="@montoTotal">Continuar</a>
    <br>
    <br>
    <center><div></center>
        <strong><p style="font-size: 50px;">MONTO TOTAL: S/. @montoTotal</p></strong>
    </div></center>