@model dynamic;
@using System.Collections.Generic;

@{
    ViewData["Title"] = "Carrito";
    IEnumerable<appPolnice.Models.Proforma> listItemsCarrito = new List <Proforma>();
        listItemsCarrito = @Model.elementosCarrito;
        Decimal montoTotal = @Model.montoTotal;
}

<h1>@ViewData["Title"]</h1>
<a class="btn btn-primary" asp-controller="Pago"
    asp-action="Create" asp-route-monto="@montoTotal">Pagar</a><p>Total S/. @montoTotal</p>

        <div class="container" >
        <div id="contenedor-tabla" class="table-responsive-md">
<table class="table table-striped " style="font-size: 18px;">
    <thead class="table table-striped table-dark">
        <tr>
            <th>
                NOMBRE
            </th>
            <th>
                CANTIDAD
            </th>
            <th>
                PRECIO
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Proforma item in Model.elementosCarrito) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="font-size: 15px;">EDITAR</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="font-size: 15px;" onclick="return confirm('¿Desea eliminar el ítem del carrito?')">ELIMINAR</a>
            </td>
        </tr>
}
    </tbody>
</table> 
        </div>
    </div>
    <br>
    <br>
    <br>
    <center><div>
        <strong><p style="font-size: 50px;">MONTO TOTAL: S/. @montoTotal</p></strong>
    </div></center>